<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/elderly"
    tools:context="com.example.rshms.v2landingcall.MainActivity">

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="424dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="60dp">

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnStart"
            android:layout_alignStart="@+id/btnStart"
            android:layout_alignTop="@+id/btnStart"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="0dp"
            android:onClick="StopMon_clicked"
            android:text="Stop  Monitoring"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/abeezee"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="126dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="92dp"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/abeezee"
            android:onClick="StartMon_clicked"
            android:text="Start Monitoring"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="128dp" />

        <Button
            android:id="@+id/btnStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnStop"
            android:layout_alignStart="@+id/btnStop"
            android:layout_below="@+id/btnStop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:onClick="ShowStats_clicked"
            android:text=" Show Statistics "
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/abeezee"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="203dp" />

        <Button
            android:id="@+id/btnSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnStats"
            android:layout_alignStart="@+id/btnStats"
            android:layout_below="@+id/btnStats"
            android:onClick="AlertSet_clicked"
            android:textSize="18sp"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/abeezee"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:text="  Alert Settings  " />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>


